<shaders>
    <shader name="Light" type="vs">
        <option name="Ortho" define="ORTHO" />
        <option name="Dir" define="DIRLIGHT" />
    </shader>
    <shader name="Light" type="ps">
        <option name="Linear" define="LINEAR" exclude="Ortho" />
        <option name="Ortho" define="ORTHO" exclude="Linear" />
        <variation name="Dir">
            <define name="DIRLIGHT" />
            <define name="LIGHT" />
        </variation>
        <variation name="Spot">
            <define name="SPOTLIGHT" />
            <define name="LIGHT" />
        </variation>
        <variation name="Point">
            <define name="POINTLIGHT" />
            <define name="LIGHT" />
        </variation>
        <option name="Mask" define="CUBEMASK" require="POINTLIGHT" />
        <option name="Shadow" define="SHADOW" require="LIGHT" />
        <option name="Spec" define="SPECULAR" />
        <option name="HW" define="HWSHADOW" require="SHADOW" />
        <option name="FB" define="FALLBACK">
            <exclude name="Linear" />
            <exclude name="Shadow" />
            <exclude name="Spec" />
            <exclude name="HW" />
        </option>
    </shader>
</shaders>
