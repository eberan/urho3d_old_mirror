<shaders>
    <shader name="Forward" type="vs">
        <option name="Normal" define="NORMALMAP" />
        <option name="VCol" define="VERTEXCOLOR" />
        <option name="Spot" define="SPOTLIGHT" />
        <variation name="" />
        <variation name="Skinned" define="SKINNED" />
        <variation name="Instanced" define="INSTANCED" />
        <variation name="Billboard" define="BILLBOARD">
            <exclude name="Normal" />
        </variation>
    </shader>
    <shader name="Forward" type="ps">
        <option name="Diff" define="DIFFMAP" />
        <option name="Normal" define="NORMALMAP" />
        <option name="SpecMap" define="SPECMAP" include="Spec" />
        <option name="VCol" define="VERTEXCOLOR" />
        <option name="Volume" define="VOLUMETRIC">
            <exclude name="Additive" />
            <exclude name="Ambient" />
            <exclude name="Normal" />
            <exclude name="SpecMap" />
            <exclude name="Unlit" />
        </option>
        <variation name="Unlit" define="UNLIT">
            <exclude name="Normal" />
            <exclude name="Spec" />
            <exclude name="SpecMap" />
        </variation>
        <variation name="Additive" define="ADDITIVE">
            <exclude name="Normal" />
            <exclude name="Spec" />
            <exclude name="SpecMap" />
        </variation>
        <variation name="Ambient" define="AMBIENT">
            <exclude name="Normal" />
            <exclude name="Spec" />
            <exclude name="SpecMap" />
        </variation>
        <variation name="Dir">
            <define name="DIRLIGHT" />
            <define name="LIGHT" />
        </variation>
        <variation name="Spot">
            <define name="SPOTLIGHT" />
            <define name="LIGHT" />
        </variation>
        <variation name="Point">
            <define name="POINTLIGHT" />
            <define name="LIGHT" />
        </variation>
        <option name="Mask" define="CUBEMASK" require="POINTLIGHT" />
        <option name="Spec" define="SPECULAR" />
    </shader>
</shaders>
